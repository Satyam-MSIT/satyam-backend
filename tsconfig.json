{
    "compilerOptions": {
      "esModuleInterop": true,
      "skipLibCheck": true,
      "target": "ESNext",
      "verbatimModuleSyntax": true,
      "allowJs": true,
      "resolveJsonModule": true,
      "moduleDetection": "force",
      "strict": true,
      "noUncheckedIndexedAccess": true,
      "module": "ESNext",
      "moduleResolution": "Bundler",
      "noEmit": true,
      "lib": ["ESNext"],
      "rootDir": "src",
      "outDir": "dist"
    }
  }